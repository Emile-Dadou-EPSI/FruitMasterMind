<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TV1"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Score : "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TV2"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Tries Left : "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/triesNb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lay1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="456dp" >
        </ListView>

    </LinearLayout>

   <LinearLayout
       android:id="@+id/indices"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@id/Lay3"
       android:visibility="gone"
       android:orientation="vertical">
       <TextView
           android:id="@+id/indicePepinTxt"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:text="Avec ou sans pépins ?"
           android:gravity="center"/>
       <LinearLayout
           android:id="@+id/indicePepin"
           android:visibility="visible"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indicePepin1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indicePepin2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indicePepin3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indicePepin4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>



       </LinearLayout>

       <TextView
           android:id="@+id/indiceEpTxt"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:text="Avec ou sans épluchure ?"
           android:gravity="center"/>
       <LinearLayout
           android:id="@+id/indiceEp"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indiceEp1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indiceEp2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indiceEp3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/indiceEp4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="vrai"
                   android:gravity="center"/>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/Lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lay2"
        android:layout_gravity="bottom"
        android:layout_marginTop="00dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/validateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="validate" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/vuChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lay3"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChoice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="click to choice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChoice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="click to choice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChoice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="click to choice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChoice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="click to choice" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>