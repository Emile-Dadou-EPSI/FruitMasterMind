<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/VictoireDefaite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Victoire ou Défaite"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Txt"
        android:layout_below="@+id/VictoireDefaite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fin du jeu ! Si vous voulez continuer à jouer cliquer sur 'Nouvelle partie' ou sur 'Rejouer'. Cliqué sur 'Quitter' pour sortir du jeu." />

    <Button
        android:id="@+id/NewGame"
        android:layout_below="@+id/Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle Partie"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/Restart"
        android:layout_below="@+id/NewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejouer"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/Quitt"
        android:layout_below="@+id/Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nb Victoires : "
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : "
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_alignRight="@id/textView2"
        android:layout_below="@+id/Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="25dp"
        android:layout_marginRight="-60dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_alignRight="@id/textView3"
        android:layout_below="@id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="20dp"
        android:layout_marginRight="-60dp"/>


</RelativeLayout>